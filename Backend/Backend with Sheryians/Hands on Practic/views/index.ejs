<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 mr-10 text-white">
      <form action="/create" method="post">
        <input class="m-5 block w-full rounded-lg p-4 outline-none bg-zinc-700" placeholder="Enter Anything "
          type="text" name="title" />
        <textarea class="m-3 block w-full rounded-lg p-4 outline-none bg-zinc-700" name="details"></textarea>
        <input class="mt-3 border rounded-lg p-3 ml-12" type="submit" value="Submit val" />
      </form>
    </div>

    <div class="task p-10 flex gap-3 flex-wrap text-white">
      <% if(files.length> 0){ %>
         <% files.forEach(function(item){ %>
          <div class="task w-72 rounded-md p-4 bg-zinc-700">
            <h1 class="text-2xl">
              <%= item %>
            </h1>
            <a class="text-blue-500 inline-block mt-2" href="/files/<%=item%>">Read more</a>
          </div>
          <% }) %>
            <% }else{ %>
              <h1 class="text-3xl">No task yet!</h1>
              <% } %>
    </div>
  </div>
</body>

</html>